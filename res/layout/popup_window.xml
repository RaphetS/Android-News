<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popup_window"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/btn_take_photo_window"
        android:background="@color/theme_blue" />

    <Button
        android:id="@+id/btn_take_photo_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_slect_photo_window"
        android:background="@drawable/btn_take_photo_selector"
        android:padding="10dp"
        android:text="拍照"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_slect_photo_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancle_window"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_take_photo_selector"
        android:padding="10dp"
        android:text="从相册选取"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_cancle_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_take_photo_selector"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>